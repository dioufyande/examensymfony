{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        #simpleform {
            width:900px;
            height: 400px;
            border:5px solid grey;
            padding:14px;
            margin-left: 300px;
        }
        #simpleform label {
            font-size:20px;
            float:left;
            width:300px;
            text-align:right;
            display:block;
        }
        #simpleform span {
            font-size:15px;
            color:grey;
            width:100px;
            text-align:right;
            display:block;
        }
        #simpleform input {
            border:1px solid grey;
            font-family:verdana;
            font-size:14px;
            color:grey;
            height:24px;
            width:250px;
            margin: 0 0 20px 10px;
        }
        h1{
            margin-left: 500px;
        }
        #simpleform button {
            clear:both;
            margin-left:250px;
            background:grey;
            color:#FFFFFF;
            border:solid 1px #666666;
            font-size:16px;
        }
    </style>
{% endblock %} 

{% block body %}
    <h1>Article creation</h1>
<div id="simpleform">

    {{ form_start(form) }}
        {{ form_widget(form) }}


        <input type="submit" value="Create" />
    {{ form_end(form) }}
</div>

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
